= form_for @user_query do |f|
  - if @user_query.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_query.errors.count, "error")} prohibited this user_query from being saved:"
      %ul
        - @user_query.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product_id, 'Product ID'
    = f.text_field :product_id
  .field
    = f.label :search_text
    = f.text_field :search_text
  .actions
    = f.submit 'Save'
